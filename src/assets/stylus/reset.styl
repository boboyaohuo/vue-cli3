html,
body
  line-height: 1
  -ms-text-size-adjust: 100%
  -webkit-text-size-adjust: 100%
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased

body 
  background-color: #fff
  padding-bottom: calc(constant(safe-area-inset-bottom) - 10px) // -10px距底位置最舒服
  padding-bottom: calc(env(safe-area-inset-bottom) - 10px) // -10px距底位置最舒服

a, html, body 
  -webkit-tap-highlight-color: transparent

*,
*:before,
*:after
  box-sizing: border-box
  margin: 0

p 
  box-sizing: border-box
  margin: 0

a 
  color: inherit
  text-decoration: none

input
  outline: none
  background-color: transparent
  border: none

ul,
li 
  padding: 0
  list-style: none