
// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 两行省略号
line-clamp($line)
  text-overflow: ellipsis
  overflow: hidden
  display:-webkit-box
  -webkit-line-clamp: $line
  -webkit-box-orient: vertical
  word-break: break-all

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// a标签四状态颜色
a-hover($color)
  &:hover
  &:active
  &:link
  &:visited
    color: $color
    text-decoration: none